@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    

    <title>@ViewBag.Title - KTM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<img src="../../Content/KTM-Logo.png">*@
                @*@Html.ActionLink("KTM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="@Url.Action("Index", "Home",new { area = "" } )" title="KTM" class="links">
                    <img alt="KTM" src="https://drive.google.com/uc?id=0ByuTp8DIw-KvRlVSWHNlcUg3Z2s">
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("All Motorcycles", "Index", "Motorcycles")</li>
                    <li>@Html.ActionLink("All News", "Index", "News")</li>*@
                    <li>@Html.ActionLink("All Motorcycles", "Index", "Motorcycles", new { area = "" }, new { @class = "navbar-nav" })</li>
                    <li>@Html.ActionLink("All News", "Index", "News", new { area = "" }, new { @class = "navbar-nav" })</li>
                    @Html.Action("All", "Categories", routeValues: new { area = "" })
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Add Motorcycle", "Add", "Motorcycles", routeValues: new { area = "Admin" }, htmlAttributes: null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KTM</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/js")*@
    @Scripts.Render("~/bundles/bootstrap")



    @RenderSection("scripts", required: false)
</body>
</html>
