@using KTM.App.HtmlHelpers
@model KTM.App.Areas.Admin.Models.BindingModels.NewsBindingModel
@using (Html.BeginForm("Add", "News", new { area = "Admin" }, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(n => n.Title, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(n => n.Title, new { placeholder = "Title", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-2">
            @Html.LabelFor(n => n.Content, new { @class = "control-label" })
        </div><div class="col-md-8">
            @Html.TextAreaFor(n => n.Content, new { placeholder = "Content", @class = "form-control" })
        </div>
    </div>
    @*<div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Engine, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(m => m.Engine, new { placeholder = "Engine", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.CategoryId, new { @class = "control-label" })
        </div><div class="col-md-8">
            @Html.DropDownListFor(m => m.CategoryId, ViewBag.Categories as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Images</label>
        </div>
        <div class="col-md-8">
            <div id="imageUrls"></div>
            @Ajax.ActionLink("+", "AddImageUrl", null, new AjaxOptions()
       {
           HttpMethod = "POST",
           UpdateTargetId = "imageUrls",
           InsertionMode = InsertionMode.InsertAfter
       }, htmlAttributes: new { @class = "btn btn-success" })
            @Html.EditorForMany(m => m.ImageUrls, "ImageUrls")
        </div>
    </div>
    <input type="submit" value="Add" class="btn btn-success" />
    <button class="btn btn-default">Cancel</button>
}